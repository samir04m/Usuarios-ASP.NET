@model LoginModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <img src="~/images/icons/pc-guitar.jpg" class="mx-auto w-25">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Index" method="POST">
                        <div class="form-group">
                            <input asp-for="Input.Email" placeholder="Email" class="form-control" autofocus />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span class="text-danger">
                                @Html.DisplayFor(m => m.ErrorMessage)
                            </span>
                        </div>
                        <button class="btn btn-primary btn-block">
                            SingIn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
